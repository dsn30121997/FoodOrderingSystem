@model FoodOrderingSystem.Models.Customer

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<style>
    .password-toggle-btn {
        cursor: pointer;
        font-weight: bold;
    }
</style>

<div class="container">
    <h2>Customer Details</h2>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">Customer Name</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.CustomerName)</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-3">Phone</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Phone)</dd>

        <dt class="col-sm-3">Address</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>

        <dt class="col-sm-3">Password</dt>
        <dd class="col-sm-9">
            <span class="password-value">******</span>
            <button class="btn btn-primary password-toggle-btn" onclick="togglePasswordVisibility(this)">View</button>
        </dd>
    </dl>

    <div class="mt-3">
        @Html.ActionLink("Edit", "Edit", new { id = Model.CustomerId }, new { @class = "btn btn-primary" })
    </div>
</div>

<script>
    function togglePasswordVisibility(button) {
        var passwordValue = $(button).prev('.password-value');
        var buttonText = $(button).text();

        if (buttonText === 'View') {
            passwordValue.text('@Html.DisplayFor(model => model.Password)');
            $(button).text('Hide');
        } else {
            passwordValue.text('******');
            $(button).text('View');
        }
    }
</script>
