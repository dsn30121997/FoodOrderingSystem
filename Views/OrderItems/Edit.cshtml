@model FoodOrderingSystem.Models.OrderItems

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>OrderItems</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.OrderId)

        @Html.HiddenFor(model => model.ItemId)

        @Html.HiddenFor(model => model.Quantity)

        <div class="form-group">

            <div class="form-group">
                @Html.LabelFor(model => model.ItemStatus, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.ItemStatus, new SelectList(
                        new[]
                        {
                            "Order Received",
                            "Item is Preparing",
                            "Item is Ready",
                            "Item is Pickup"
                        }), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ItemStatus, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
