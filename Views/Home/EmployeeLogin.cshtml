@model FoodOrderingSystem.Models.Employee

@{
    ViewBag.Title = "EmployeeLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("EmployeeLogin", "Home", FormMethod.Post))

{
    <div class="modal modal-sheet position-static d-block bg-body-secondary p-4 py-md-5" tabindex="-1" role="dialog" id="modalSignin">
        <div class="modal-dialog" role="document">
            <div class="modal-content rounded-4 shadow">
                <div class="modal-header p-5 pb-4 border-bottom-0">
                    <h1 class="fw-bold mb-0 fs-2">EmployeeLogin</h1>
                </div>

                <div class="modal-body p-5 pt-0">
                    <form class="">
                        <div class="form-floating mb-3">

                            <table class="table table-bordered">

                                <tr>

                                    <td>@Html.LabelFor(m => m.Email)</td>

                                    <td>@Html.TextBoxFor(m => m.Email)</td>

                                </tr>

                                <tr>

                                    <td>@Html.LabelFor(m => m.Password)</td>

                                    <td>@Html.PasswordFor(m => m.Password)</td>

                                </tr>
                            </table>
                            <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Sign In</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


}